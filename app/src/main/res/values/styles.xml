<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- transitions attributes -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <!-- component styles -->
        <item name="android:buttonStyle">@style/RoundedButton</item>
        <item name="android:textViewStyle">@style/DefaultTextStyle</item>
    </style>

    <style name="ToolbarBarStyle" parent="Base.V7.Widget.AppCompat.Toolbar">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textViewStyle">@style/ToolbarTextStyle</item>
    </style>

    <style name="ToolbarTextStyle" >
        <item name="android:gravity">center</item>

    </style>

    <style name="DefaultButtonStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:padding">20dp</item>

    </style>

    <style name="RoundedButton" parent="DefaultTextStyle">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="DefaultTextStyle" >
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleStyle" parent="DefaultTextStyle">
        <item name="android:textSize">33sp</item>
    </style>

</resources>
