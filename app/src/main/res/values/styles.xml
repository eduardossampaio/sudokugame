<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/app_background</item>

        <!-- transitions attributes -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>

        <!-- component styles -->
        <item name="android:buttonStyle">@style/RoundedButton</item>
        <item name="android:textViewStyle">@style/DefaultTextStyle</item>
        <item name="android:actionBarStyle">@style/ToolbarBarStyle</item>
    </style>

    <style name="ToolbarBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/toolbar_background</item>
        <item name="android:textViewStyle">@style/ToolbarTextStyle</item>
    </style>


    <style name="ToolbarTextStyle" >
        <item name="android:gravity">center</item>
        <item name="android:textSize">36sp</item>

    </style>

    <style name="DefaultButtonStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="android:padding">20dp</item>

    </style>

    <style name="RoundedButton" parent="DefaultTextStyle">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:textColor">@color/logo_color_1</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/button_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/button_horizontal_margin</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="NoBorderButton" parent="@style/Base.Widget.AppCompat.Button.Borderless">

    </style>
    <style name="DefaultTextStyle" >
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TitleStyle" parent="DefaultTextStyle">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="SubtitleStyle" parent="DefaultTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TableTextStyle" parent="DefaultTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ListTextStyle" parent="DefaultTextStyle">
        <item name="android:gravity">left</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>


</resources>
